<TZ_Dismemberments_Firearms2>

<!-- Firearms 2 -->

<!-- All ammo, Headshots -->
	<append xpath="/items/item[contains(@name, 'mayicammo')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
	
<!-- Individual ammo, Limbs -->
	
<!-- 20g Shells -->
	<append xpath="/items/item[@name='mayicammo20gauge']/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="0.3" tags="leg,arm"/>
	</append>
<!-- Dragonsbreath shells -->
	<append xpath="/items/item[@name='mayicammoDragonsbreath']/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="0.15" tags="leg,arm"/>
	</append>
<!-- Electric shells -->
	<append xpath="/items/item[@name='mayicammoElectricshell']/effect_group[@name='Base Effects']">
