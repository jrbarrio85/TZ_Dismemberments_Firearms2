	</append>
<!-- 50cal, M82 -->
	<append xpath="/items/item[@name='mayicammo50cal']/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="leg,arm"/>
